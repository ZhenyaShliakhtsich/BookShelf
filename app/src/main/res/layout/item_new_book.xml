<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp186"
    android:layout_height="@dimen/dp280">

    <ImageView
        android:id="@+id/new_book_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp250"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_book_price"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp23"
        android:background="@color/blue"
        android:gravity="center"
        android:textAppearance="@style/item_new_book_price_style"
        app:layout_constraintStart_toStartOf="@id/new_book_image"
        app:layout_constraintTop_toTopOf="@id/new_book_image" />

    <TextView
        android:id="@+id/new_book_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAppearance="@style/item_new_book_header_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_book_image" />


</androidx.constraintlayout.widget.ConstraintLayout>