<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp170">

    <ImageView
        android:id="@+id/item_book_image"
        android:layout_width="@dimen/dp109"
        android:layout_height="@dimen/dp152"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_book_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        android:gravity="center"
        android:textAppearance="@style/item_book_header_style"
        app:layout_constraintStart_toEndOf="@id/item_book_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        android:gravity="center"
        android:textAppearance="@style/item_book_description_style"
        app:layout_constraintStart_toEndOf="@id/item_book_image"
        app:layout_constraintTop_toBottomOf="@id/item_book_name" />

    <TextView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp37"
        android:layout_marginEnd="@dimen/dp4"
        android:background="@drawable/price_label_bg"
        android:gravity="center"
        android:textAppearance="@style/item_book_price_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>